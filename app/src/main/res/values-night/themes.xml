<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TajnoKOM" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bordeaux</item>
        <item name="colorPrimaryVariant">@color/pale_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bordeaux</item>
        <item name="colorSecondaryVariant">@color/pale_red</item>
        <item name="colorOnSecondary">@color/very_light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pale_red</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/dark_gray</item>

        <item name="colorOnSurface"> @color/white </item>
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>

        <item name="colorControlHighlight">@color/bordeaux</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/pale_red</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/backgroundColor</item>
    </style>


    <style name="TajnoKOM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TajnoKOM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TajnoKOM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TajniBAR">
        <item name="android:background">@color/bordeaux</item>
    </style>
</resources>